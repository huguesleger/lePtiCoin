{% extends "::template.html.twig"%}
{% block header %}Annonces - edition{% endblock %}

{% block body %}
    <div class="container col-xs-10 col-xs-offset-1">
       
            {{form_start(annonce,{'attr':{'action':path('editAnn'),'enctype':'multipart/form-data','id':'annonce'}})}}
            {{form_row(annonce.titre)}}
            {{form_row(annonce.prix)}}
            {{form_row(annonce.vendeur)}}
            {{form_row(annonce.dateDeParution)}}
            {{form_row(annonce.telephone)}}
            {{form_row(annonce.categorie)}}
            {{form_row(annonce.localite)}}
            {{form_row(annonce.description|e )}}
            <input type="text" value="{{id}}" name="id" class="hidden"/>
            <input type="submit" value="Ajouter" />
            
            <p id="retour"></p>
            <!--<button id="edit">mise a jour</button>-->
    </div>
{% endblock %}

        {% block javascripts %}
            {{parent()}}
            <script src="{{ asset('bundles/js/ajax.js') }}"></script>
        {% endblock %}