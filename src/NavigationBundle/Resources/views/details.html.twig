{% extends "::template.html.twig"%}
{% block header %}Details{% endblock %}

{% block body %}
    <div class="container col-xs-10 col-xs-offset-1">
        <article class="bg-warning">
            <header class="col-xs-12 text-center text-bold text-uppercase"><h3>{{annonce.categorie.nom}}</h3></header>
            <h4 class="col-xs-8">{{annonce.titre}}</h4>
            <h6 class="col-xs-4">{{annonce.dateDeParution|date("d/m/y")}}</h6>
            <img class="col-xs-8" src="null" alt="{{annonce.image}}" />
            <p class="col-xs-4 text-justify">{{annonce.description}}</p>
        </article>
        <a href="{{path('removeAnn',{"id":annonce.id})}}">supprimer</a>
    </div>
{% endblock %}